<div class="container py-4">
  <h1 class="h3 mb-3">Seu carrinho</h1>

  <%# -- Minimal â€œit rendersâ€ test; remove after you see it working -- %>
  <p class="text-muted">rendering carts/show</p>

  <% if @lines.present? %>
    <div class="table-responsive">
      <table class="table align-middle">
        <thead>
          <tr>
            <th>Produto</th>
            <th style="width:140px">Quantidade</th>
            <th>PreÃ§o</th>
            <th>Total</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @lines.each do |line| %>
            <% screw = line[:screw]; qty = line[:qty]; line_total = line[:line_total] %>
            <tr>
              <td>
                <div class="d-flex gap-3">
                  <div style="width:72px;height:72px" class="border rounded d-flex align-items-center justify-content-center bg-white">
                    <% if screw.images.attached? %>
                      <%= image_tag screw.images.first.variant(resize_to_limit: [120,120]), class: "img-fluid p-1", style: "object-fit:contain" %>
                    <% else %>
                      <span class="text-muted small">Sem imagem</span>
                    <% end %>
                  </div>
                  <div>
                    <strong><%= screw.description %></strong><br>
                    <small class="text-muted"><%= screw.thread %> â€” <%= screw.surface_treatment %></small>
                  </div>
                </div>
              </td>

              <td>
                <%= form_with url: set_cart_path(screw_id: screw.id), method: :patch, local: true, class: "d-flex gap-2" do %>
                  <%= number_field_tag :quantity, qty, class: "form-control", min: 0, style: "width:90px" %>
                  <%= submit_tag "Atualizar", class: "btn btn-outline-secondary" %>
                <% end %>
              </td>

              <td><%= format_price(screw.price) %></td>
              <td><strong><%= format_price(line_total) %></strong></td>
              <td class="text-end">
                <%= button_to "Remover",
                              remove_cart_path(screw_id: screw.id),
                              method: :delete,
                              form: { data: { turbo_confirm: "Remover item?" } },
                              class: "btn btn-sm btn-outline-danger" %>
              </td>
            </tr>
          <% end %>
        </tbody>
        <tfoot>
          <%# // NEW: full-width row for the progress bar %>
          <tr>
            <td colspan="4">
              <%# // Progress bar de frete grÃ¡tis (usa @subtotal) %>
              <% free_limit = 150.to_d %>   <%# // valor do frete grÃ¡tis %>
              <% remaining  = [free_limit - @subtotal.to_d, 0.to_d].max %>
              <% percent    = [((@subtotal.to_d / free_limit) * 100).to_i, 100].min %>

              <% if remaining > 0 %>
                <div class="small mb-1">
                  Faltam <strong><%= format_price(remaining) %></strong> para frete grÃ¡tis
                </div>
                <div class="progress mb-3">
                  <div class="progress-bar"
                      role="progressbar"
                      style="width: <%= percent %>%;"
                      aria-valuenow="<%= percent %>"
                      aria-valuemin="0"
                      aria-valuemax="100">
                    <%= percent %>%
                  </div>
                </div>
              <% else %>
                <div class="alert alert-success py-2 mb-3">
                  ðŸŽ‰ VocÃª ganhou <strong>frete grÃ¡tis</strong>!
                </div>
              <% end %>
            </td>
          </tr>

          <%# // Subtotal row (unchanged) %>
          <tr>
            <th colspan="3" class="text-end">Subtotal</th>
            <th><%= format_price(@subtotal) %></th>
          </tr>

          <%# // Frete row %>
          <tr>
            <th colspan="3" class="text-end">Frete</th>
            <th><%= format_price(@shipping) %></th>
          </tr>

          <%# // Total row %>
          <tr>
            <th colspan="3" class="text-end">Total</th>
            <th class="h5"><%= format_price(@total) %></th>
          </tr>
        </tfoot>
      </table>
    </div>

    <div class="d-flex gap-2">
      <%= link_to "Continuar comprando", screws_path, class: "btn btn-outline-secondary" %>
      <%= button_to "Esvaziar", clear_cart_path, method: :delete, form: { data: { turbo_confirm: "Esvaziar carrinho?" } }, class: "btn btn-outline-danger" %>
      <%= link_to "Finalizar compra", checkout_path, class: "btn btn-yellow ms-auto" %>
    </div>
  <% else %>
    <div class="alert alert-info">Seu carrinho estÃ¡ vazio.</div>
    <%= link_to "Voltar ao catÃ¡logo", screws_path, class: "btn btn-yellow" %>
  <% end %>
</div>
