<!-- app/views/orders/new.html.erb -->
<div class="container py-4">
  <h1 class="h3 mb-3">Checkout</h1>

  <div class="row g-4">
    <!-- Left column: items summary -->
    <div class="col-lg-7">
      <div class="table-responsive">
        <table class="table align-middle">
          <thead>
            <tr>
              <th>Produto</th>
              <th class="text-end">Qtd</th>
              <th class="text-end">Pre√ßo</th>
              <th class="text-end">Total</th>
            </tr>
          </thead>
          <tbody>
            <% @lines.each do |line| %>
              <% screw = line[:screw] %>
              <tr>
                <td>
                  <div class="d-flex gap-3">
                    <div style="width:64px;height:64px" class="border rounded d-flex align-items-center justify-content-center bg-white">
                      <% if screw.images.attached? %>
                        <%= image_tag screw.images.first.variant(resize_to_limit: [120,120]),
                                      class: "img-fluid p-1", style: "object-fit:contain" %>
                      <% else %>
                        <span class="text-muted small">Sem imagem</span>
                      <% end %>
                    </div>
                    <div>
                      <strong><%= screw.description %></strong><br>
                      <small class="text-muted"><%= screw.thread %> - <%= screw.surface_treatment %></small>
                    </div>
                  </div>
                </td>
                <td class="text-end"><%= line[:qty] %></td>
                <td class="text-end"><%= format_price(line[:unit_price]) %></td>
                <td class="text-end"><%= format_price(line[:line_total]) %></td>
              </tr>
            <% end %>
          </tbody>
          <tfoot>
            <tr>
              <th colspan="3" class="text-end">Subtotal</th>
              <th class="text-end"><%= format_price(@subtotal) %></th>
            </tr>
            <tr>
              <th colspan="3" class="text-end">Frete</th>
              <th class="text-end"><%= format_price(@shipping) %></th>
            </tr>
            <tr>
              <th colspan="3" class="text-end">Total</th>
              <th class="text-end h5"><%= format_price(@total) %></th>
            </tr>
          </tfoot>
        </table>
      </div>
      <%= link_to "Voltar ao carrinho", cart_path, class: "btn btn-outline-secondary" %>
    </div>

    <!-- Right column: address picker + form -->
    <div class="col-lg-5">
      <% if defined?(user_signed_in?) && user_signed_in? %>
        <div class="card shadow-sm mb-3">
          <div class="card-body">
            <div class="d-flex align-items-center justify-content-between mb-2">
              <h6 class="mb-0">Escolher endere√ßo de entrega</h6>
              <%= link_to "Novo endere√ßo", new_shipping_address_path(return_to: "checkout"), class: "btn btn-sm btn-outline-secondary" %>
            </div>

            <% if @addresses.present? %>
              <div class="list-group">
                <% @addresses.each do |a| %>
                  <% is_active =
                      (params[:address_id].present? && params[:address_id].to_i == a.id) ||
                      (!params[:address_id].present? && (a.is_default? || a == @addresses.first)) %>

                  <div class="list-group-item d-flex justify-content-between align-items-start <%= 'active' if is_active %>">
                    <div class="me-3">
                      <strong><%= a.recipient_name.presence || current_user.name || "Destinat√°rio" %></strong><br>
                      <small class="text-muted">
                        <%= a.street %>, <%= a.number %><%= a.complement.present? ? " ‚Äî #{a.complement}" : "" %><br>
                        <%= a.district %> ‚Äî <%= a.city %>/<%= a.state %><br>
                        CEP: <%= a.cep %>
                      </small>
                    </div>
                    <div class="ms-auto d-flex gap-2">
                      <%= link_to "Editar",
                                  edit_shipping_address_path(a, return_to: "checkout"),  # // send return_to flag
                                  class: "btn btn-sm btn-outline-secondary" %>
                      <%= link_to "Usar este",
                                  checkout_path(address_id: a.id),
                                  class: "btn btn-sm btn-outline-primary",
                                  data: { turbo: false } %>  <%# // keep full reload so the form is prefilled %>
                    </div>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div class="alert alert-info mb-0">
                Voc√™ ainda n√£o cadastrou endere√ßos.
                <%= link_to "Adicionar agora", new_shipping_address_path, class: "alert-link" %>.
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <div class="card shadow-sm">
        <div class="card-body">
          <h5 class="card-title mb-3">Seus dados</h5>

          <% if @order.errors.any? %>
            <div class="alert alert-danger">
              <strong><%= pluralize(@order.errors.count, "erro") %> ao salvar:</strong>
              <ul class="mb-0">
                <% @order.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <%= form_with model: @order, url: orders_path, local: true do |f| %>
            <div class="mb-3">
              <%= f.label :customer_name, "Nome completo", class: "form-label" %>
              <%= f.text_field :customer_name, class: "form-control", required: true %>
            </div>

            <div class="mb-3">
              <%= f.label :customer_email, "Email", class: "form-label" %>
              <%= f.email_field :customer_email, class: "form-control", required: true %>
            </div>

            <hr class="my-4">
            <h6 class="mb-3">Endere√ßo de entrega</h6>

            <div data-controller="cep">
              <div class="mb-3">
                <%= f.label :cep, "CEP", class: "form-label" %>
                <%= f.text_field :cep,
                      class: "form-control",
                      placeholder: "12345-678",
                      required: true,
                      maxlength: 9,
                      data: { cep_target: "cep", action: "input->cep#debouncedLookup blur->cep#lookup" } %>
                <div data-cep-target="feedback" class="small text-muted mt-1"></div>
              </div>

              <div class="mb-3">
                <%= f.label :street, "Rua", class: "form-label" %>
                <%= f.text_field :street, class: "form-control", required: true, data: { cep_target: "street" } %>
              </div>

              <div class="row g-3">
                <div class="col-6">
                  <%= f.label :number, "N√∫mero", class: "form-label" %>
                  <%= f.text_field :number, class: "form-control", required: true %>
                </div>
                <div class="col-6">
                  <%= f.label :complement, "Complemento", class: "form-label" %>
                  <%= f.text_field :complement, class: "form-control" %>
                </div>
              </div>

              <div class="row g-3 mt-1">
                <div class="col-6">
                  <%= f.label :district, "Bairro", class: "form-label" %>
                  <%= f.text_field :district, class: "form-control", required: true, data: { cep_target: "district" } %>
                </div>
                <div class="col-6">
                  <%= f.label :city, "Cidade", class: "form-label" %>
                  <%= f.text_field :city, class: "form-control", required: true, data: { cep_target: "city" } %>
                </div>
              </div>

              <div class="mb-3 mt-1">
                <%= f.label :state, "UF", class: "form-label" %>
                <%= f.text_field :state, class: "form-control", placeholder: "SP", required: true, maxlength: 2, data: { cep_target: "state" } %>
              </div>
            </div>

            <%# // Progress bar de frete gr√°tis (usa @subtotal) %>
            <% free_limit = 150.to_d %>   <%# // valor do frete gr√°tis %>
            <% remaining  = [free_limit - @subtotal.to_d, 0.to_d].max %>
            <% percent    = [((@subtotal.to_d / free_limit) * 100).to_i, 100].min %>

            <% if remaining > 0 %>
              <div class="small mb-1">Faltam <strong><%= format_price(remaining) %></strong> para frete gr√°tis</div>
              <div class="progress mb-3">
                <div class="progress-bar"
                    role="progressbar"
                    style="width: <%= percent %>%;"
                    aria-valuenow="<%= percent %>"
                    aria-valuemin="0"
                    aria-valuemax="100">
                  <%= percent %>%
                </div>
              </div>
            <% else %>
              <div class="alert alert-success py-2 mb-3">üéâ Voc√™ ganhou <strong>frete gr√°tis</strong>!</div>
            <% end %>

            <div class="border-top pt-3 mt-3 d-flex align-items-center justify-content-between">
              <div>
                <div class="small text-muted">Subtotal</div>
                <div><%= format_price(@subtotal) %></div>
              </div>
              <div>
                <div class="small text-muted">
                Frete<% if @shipping_uf.present? %> (<%= @shipping_uf %> ‚Äì <%= @shipping_region.to_s.humanize %>)<% end %></div>
                <div><%= format_price(@shipping) %></div>
              </div>
              <div>
                <div class="small text-muted">Total</div>
                <div class="h5 mb-0"><%= format_price(@total) %></div>
              </div>
            </div>

            <div class="d-grid">
              <%= f.submit "Confirmar pedido", class: "btn btn-yellow" %>
            </div>
          <% end %>

          <p class="text-muted small mt-3 mb-0">
            * Pagamento ser√° adicionado depois (ex.: Stripe/PIX). Este √© um pedido de teste. Regra provis√≥ria: frete R$ 20,00 (gr√°tis acima de R$ 150,00).
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
