<!-- app/views/orders/new.html.erb -->
<div class="container py-4">
  <h1 class="h3 mb-3">Checkout</h1>

  <div class="row g-4">
    <div class="col-lg-7">
      <div class="table-responsive">
        <table class="table align-middle">
          <thead>
            <tr>
              <th>Produto</th>
              <th class="text-end">Qtd</th>
              <th class="text-end">Preço</th>
              <th class="text-end">Total</th>
            </tr>
          </thead>
          <tbody>
            <% @lines.each do |line| %>
              <% screw = line[:screw] %>
              <tr>
                <td>
                  <div class="d-flex gap-3">
                    <div style="width:64px;height:64px" class="border rounded d-flex align-items-center justify-content-center bg-white">
                      <% if screw.images.attached? %>
                        <%= image_tag screw.images.first.variant(resize_to_limit: [120,120]),
                                      class: "img-fluid p-1", style: "object-fit:contain" %>
                      <% else %>
                        <span class="text-muted small">Sem imagem</span>
                      <% end %>
                    </div>
                    <div>
                      <strong><%= screw.description %></strong><br>
                      <small class="text-muted"><%= screw.thread %> - <%= screw.surface_treatment %></small>
                    </div>
                  </div>
                </td>
                <td class="text-end"><%= line[:qty] %></td>
                <td class="text-end"><%= format_price(line[:unit_price]) %></td>
                <td class="text-end"><%= format_price(line[:line_total]) %></td>
              </tr>
            <% end %>
          </tbody>
          <tfoot>
            <tr>
              <th colspan="3" class="text-end">Subtotal</th>
              <th class="text-end"><%= format_price(@subtotal) %></th>
            </tr>
            <tr>
              <th colspan="3" class="text-end">Frete</th>
              <th class="text-end"><%= format_price(@shipping) %></th>
            </tr>
            <tr>
              <th colspan="3" class="text-end">Total</th>
              <th class="text-end h5"><%= format_price(@total) %></th>
            </tr>
          </tfoot>
        </table>
      </div>
      <%= link_to "Voltar ao carrinho", cart_path, class: "btn btn-outline-secondary" %>
    </div>

    <div class="col-lg-5">
      <div class="card shadow-sm">
        <div class="card-body">
          <h5 class="card-title mb-3">Seus dados</h5>

          <%= form_with model: @order, url: orders_path, local: true do |f| %>
            <div class="mb-3">
              <%= f.label :customer_name, "Nome completo", class: "form-label" %>
              <%= f.text_field :customer_name, class: "form-control", required: true %>
            </div>

            <div class="mb-3">
              <%= f.label :customer_email, "Email", class: "form-label" %>
              <%= f.email_field :customer_email, class: "form-control", required: true %>
            </div>

            <div class="d-grid">
              <%= f.submit "Confirmar pedido", class: "btn btn-yellow" %>
            </div>
          <% end %>

          <p class="text-muted small mt-3 mb-0">
            * Pagamento será adicionado depois (ex.: Stripe/PIX). Este é um pedido de teste.
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
