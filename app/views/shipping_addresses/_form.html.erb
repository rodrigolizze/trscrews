<%# // Formulário reutilizável para new/edit. Usa @shipping_address e deixa o Rails inferir a rota. %>

<%= form_with model: @shipping_address,                 # // chave: usa o nome do model
              local: true,
              html: { class: "card shadow-sm" } do |f| %>
              <%= hidden_field_tag :return_to, params[:return_to] if params[:return_to].present? %>

  <div class="card-body">
    <%# // Erros de validação %>
    <% if @shipping_address.errors.any? %>
      <div class="alert alert-danger">
        <strong><%= pluralize(@shipping_address.errors.count, "erro") %> ao salvar:</strong>
        <ul class="mb-0">
          <% @shipping_address.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="row g-3">
      <div class="col-md-8">
        <div class="mb-3">
          <%= f.label :recipient_name, "Nome do destinatário", class: "form-label" %>
          <%= f.text_field :recipient_name, class: "form-control", required: true %>
        </div>

        <div class="row g-3">
          <div class="col-md-4">
            <%= f.label :cep, "CEP", class: "form-label" %>
            <%= f.text_field :cep, class: "form-control", placeholder: "00000-000", maxlength: 9, required: true %>
            <div class="form-text">Digite o CEP. (Podemos auto-preencher via ViaCEP depois.)</div>
          </div>
          <div class="col-md-8">
            <%= f.label :street, "Rua", class: "form-label" %>
            <%= f.text_field :street, class: "form-control", required: true %>
          </div>
        </div>

        <div class="row g-3 mt-1">
          <div class="col-md-4">
            <%= f.label :number, "Número", class: "form-label" %>
            <%= f.text_field :number, class: "form-control", required: true %>
          </div>
          <div class="col-md-8">
            <%= f.label :complement, "Complemento", class: "form-label" %>
            <%= f.text_field :complement, class: "form-control" %>
          </div>
        </div>

        <div class="row g-3 mt-1">
          <div class="col-md-4">
            <%= f.label :district, "Bairro", class: "form-label" %>
            <%= f.text_field :district, class: "form-control", required: true %>
          </div>
          <div class="col-md-5">
            <%= f.label :city, "Cidade", class: "form-label" %>
            <%= f.text_field :city, class: "form-control", required: true %>
          </div>
          <div class="col-md-3">
            <%= f.label :state, "UF", class: "form-label" %>
            <%= f.text_field :state, class: "form-control", maxlength: 2, placeholder: "SP", required: true %>
          </div>
        </div>

        <div class="form-check mt-3">
          <%# // Permite já marcar como padrão neste formulário %>
          <%= f.check_box :is_default, class: "form-check-input", id: "addr_default" %>
          <%= f.label :is_default, "Definir como endereço padrão", class: "form-check-label", for: "addr_default" %>
        </div>
      </div>
    </div>
  </div>

  <div class="card-footer d-flex gap-2">
    <%= f.submit (@shipping_address.persisted? ? "Atualizar" : "Salvar"), class: "btn btn-primary" %>
    <%= link_to "Cancelar",
            (params[:return_to] == "checkout" ? checkout_path(address_id: @shipping_address&.id) : shipping_addresses_path),
            class: "btn btn-outline-secondary" %>
  </div>
<% end %>
